# EditorConfig helps developers define and maintain consistent coding styles across editors

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Settings for shell scripts
[*.sh]
indent_size = 4

# Settings for JavaScript files
[*.js]
indent_size = 4
